{
  "openapi": "3.0.3",
  "info": {
    "title": "Hotel Management - Translate API",
    "version": "1.0.0"
  },
  "servers": [
    { "url": "http://localhost:7788" }
  ],
  "paths": {
    "/translate/get-translate-result": {
      "post": {
        "summary": "Get translate results for conversation messages",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/GetTranslateResultRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiResponseMessageTranslateArray" }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ApiResponseMessageTranslateArray": {
        "type": "object",
        "properties": {
          "timestamp": { "type": "integer", "format": "int64" },
          "statusCode": { "type": "integer" },
          "message": { "type": "string" },
          "data": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/MessageTranslate" }
          },
          "error": { "type": "string", "nullable": true }
        },
        "required": ["timestamp", "statusCode", "message"]
      },
      "GetTranslateResultRequest": {
        "type": "object",
        "properties": {
          "conversationId": { "type": "integer", "format": "int64" },
          "messageIdList": {
            "type": "array",
            "items": { "type": "integer", "format": "int64" }
          },
          "language": {
            "type": "string",
            "enum": ["zh_CN", "en_US", "ja_JP"],
            "description": "目标语言代码"
          }
        },
        "required": ["conversationId", "messageIdList", "language"]
      },
      "MessageTranslate": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "format": "int64" },
          "conversationId": { "type": "integer", "format": "int64" },
          "messageId": { "type": "integer", "format": "int64" },
          "language": { "type": "string" },
          "content": { "type": "string" },
          "createTime": { "type": "string", "format": "date-time" },
          "updateTime": { "type": "string", "format": "date-time" }
        },
        "required": ["id", "conversationId", "messageId", "language", "content"]
      }
    }
  }
}


